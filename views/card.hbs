<h1>Корзина</h1>

<div id="card">
{{#if flowers.length}}
  <table>
    <thead>
      <tr>
        <th>Название</th>
        <th>Количество</th>
        <th>Цена</th>
      </tr>
    </thead>
    <tbody>
      
      {{#each flowers}}
      <tr>
        <td>{{title}}</td>
        <td>
          <button class="btn btn-sm js-remove"
            data-id="{{id}}"
            data-csrf="{{@root.csrf}}"
          >-</button>
            {{count}}
          <button class="btn btn-sm js-add"
            data-id="{{id}}"
            data-csrf="{{@root.csrf}}"
          >+</button>
        </td>
        <td class="price">{{price}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p><strong>Стоимость:</strong> <span class="price">{{price}}</span></p>
  <form action="/orders" method="POST">
    <input type="text" name="info" placeholder="Дополнительная информация"></input>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn">Сделать заказ</button>
  </form>
{{else}}
  <p>Корзина пуста</p>
{{/if}}
</div>